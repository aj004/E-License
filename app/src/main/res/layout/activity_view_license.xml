            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:id="@+id/h1">

            <TextView
                android:text="License No.       :  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
