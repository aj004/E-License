<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/all_background1">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ll1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/username"
            android:background="@drawable/rounded_white"
            android:hint="  Username" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:background="@drawable/rounded_white"
            android:layout_marginTop="15dp"
            android:hint="  Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/father"
            android:hint=" Father/Husband Name"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dob"
            android:background="@drawable/rounded_white"
            android:layout_marginTop="15dp"
            android:hint=" Date-Of-Birth" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/village"
            android:hint=" Village Name"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/taluka"
            android:background="@drawable/rounded_white"
            android:layout_marginTop="15dp"
            android:hint="  Taluka Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dist"
            android:background="@drawable/rounded_white"
            android:layout_marginTop="15dp"
            android:hint="  District Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/pincode"
            android:background="@drawable/rounded_white"
            android:layout_marginTop="15dp"
            android:hint="  Pincode" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/pwd"
            android:background="@drawable/rounded_white"
            android:layout_marginTop="15dp"
            android:hint="  Password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/cpwd"
            android:background="@drawable/rounded_white"
            android:layout_marginTop="15dp"
            android:hint="  Conform your password" />


        <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:background="@drawable/green"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp" />


    </LinearLayout>
</ScrollView>
</RelativeLayout>
